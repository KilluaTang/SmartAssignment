@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model FruitShop.ViewModels.CartViewModel

<h2>Shopping Cart</h2>

<div>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductsInCart)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td></td>
                    <td>@product.Price</td>
                    <td></td>
                    <td>
                        @Html.ActionLink("Remove Product", "RemoveItem", "Cart", new { id = product.ProductId }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


